<Login>:
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'BG.jpg'
    BoxLayout:
        id: login_layout
        orientation: 'vertical'
        padding: [0,0,0,0]
        spacing: 0

        Label:
            text: 'Welcome To Project Blackhole'
            font_size: 56
            color:  0/255,84/255,188/255,1
            font_name: 'adventpro-bold'
            canvas.before:
                Color:
                    # rgba: 0,0,1,1

        Label:
            text: 'Student ID'
            font_size: 40
            color:  255/255,102/255,102/255,255/255
            font_name: 'adventpro-bold'
            halign: 'left'
            text_size: root.width-75, 350
                
        BoxLayout:
            orientation:'horizontal'
            padding: [7,10,7,10]
            TextInput:
                id: login
                halign: 'left'
                size_hint: (0.68,0.45)
                # height: 30
                multiline:False
                font_size: 58


            # BoxLayout:
            #     orientation: 'vertical'
            #     Label:
            #         text: 'Password'
            #         halign: 'left'
            #         font_size: 18
            #         text_size: root.width-20, 20

            #     TextInput:
            #         id: password
            #         multiline:False
            #         password:True
            #         font_size: 28

            Button:
                background_down: 'login_button_pressed.png'
                background_normal: 'login_button_normal.png'
                font_size: 24
                halign: 'right'
                size_hint: (0.17,0.45)
                on_press: root.do_login(login.text)